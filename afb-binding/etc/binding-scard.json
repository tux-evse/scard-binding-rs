{
    "binding": [
        {
            "uid": "nfc-reader",
            "api": "scard",
            "path": "${CARGO_TARGET_DIR}debug/libafb_nfc.so",
            "info": "nfc ACR122U Reader binding",
            "permission": "acl:nfc:client",
            "nfc": {
                "info": "Demo config with Mifare Classic",
                "reader": "ACR122U",
                "verbose": 1,
                "keys": [
                    {
                        "uid": "key-a",
                        "idx": 0,
                        "value": [
                            "0x01",
                            "0x02",
                            "0x03",
                            "0x04",
                            "0x05",
                            "0x06"
                        ]
                    },
                    {
                        "uid": "key-b",
                        "idx": 1,
                        "value": [
                            "0x0A",
                            "0x0B",
                            "0x0C",
                            "0x0D",
                            "0x0E",
                            "0x0F"
                        ]
                    }
                ],
                "cmds": [
                    {
                        "uid": "get-uuid",
                        "info": "return smart scard uuid",
                        "action": "uuid"
                    },
                    {
                        "uid": "get-contract",
                        "info": "retrieve contract ID from NFC",
                        "action": "read",
                        "sec": 3,
                        "len": 48,
                        "key": "key-a"
                    },
                    {
                        "uid": "get-name",
                        "info": "get customer contact info",
                        "action": "read",
                        "sec": 4,
                        "len": 48,
                        "key": "key-a"
                    },
                    {
                        "uid": "get-status",
                        "info": "get current status from scard",
                        "action": "read",
                        "sec": 5,
                        "len": 48,
                        "key": "key-a"
                    },
                    {
                        "uid": "set-status",
                        "info": "write current status in scard",
                        "action": "write",
                        "sec": 5,
                        "len": 48,
                        "key": "key-b",
                    }
                ]
            }
        }
    ]
}